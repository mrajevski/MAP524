<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.map524.mattrajevski.w2.MainActivity">

    <Button
        android:id="@+id/A2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start A2"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="132dp"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/A3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start A3"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="217dp"
        android:layout_below="@+id/PIN"
        android:layout_alignStart="@+id/A2_button"
        android:layout_marginTop="38dp" />

    <EditText
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/A2_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Greeting"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/greeting"
        android:layout_below="@+id/greeting"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Student Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sName"
        android:layout_below="@+id/sName"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Student ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/PIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sID"
        android:layout_below="@+id/sID"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="PIN"
        android:inputType="textPersonName" />

</RelativeLayout>
