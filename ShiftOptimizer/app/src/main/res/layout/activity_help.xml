<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.map524.mattrajevski.shiftoptimizer.help">

    <ImageView
        android:id="@+id/more"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_marginLeft="22dp"
        android:background="@android:color/background_dark"
        android:padding="1dp"
        app:layout_constraintLeft_toRightOf="@+id/t4"
        app:layout_constraintTop_toTopOf="@+id/t4"
        app:srcCompat="@android:color/holo_red_dark"
        tools:ignore="ContentDescription"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="22dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@android:color/background_dark"
        android:padding="1dp"
        app:layout_constraintLeft_toRightOf="@+id/t4"
        app:layout_constraintTop_toTopOf="@+id/t4"
        app:srcCompat="@android:color/holo_orange_dark"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="22dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@android:color/background_dark"
        android:padding="1dp"
        app:layout_constraintLeft_toRightOf="@+id/t4"
        app:layout_constraintTop_toTopOf="@+id/t4"
        app:srcCompat="@android:color/holo_green_dark"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/no"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/textView"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/textView"
        android:background="@android:color/background_dark"
        android:padding="1dp"
        app:layout_constraintLeft_toRightOf="@+id/t4"
        app:layout_constraintTop_toTopOf="@+id/t4"
        app:srcCompat="@android:color/white"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="73dp"
        android:text="No action required - "
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:text="Shift up - "
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="40dp"
        android:text="Shift Down - "
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="40dp"
        android:text="Increase Throttle - "
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on color to hear sound that\n will play when the specified action is required"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />
</RelativeLayout>
